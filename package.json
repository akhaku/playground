{
  "name": "playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node lib/server/index.js",
    "clean": "rm -rf lib",
    "copy-less": "rsync -rv --include='*/' --include='*.less' --exclude='*' --prune-empty-dirs src/ lib",
    "dev": "npm run symlink && npm run babel && npm run webpack-dev-server & BABEL_ENV=node babel src -w -d lib & nodemon lib/server/index.js",
    "babel": "BABEL_ENV=node babel src --out-dir lib",
    "test": "mocha --exit test/*.test.js",
    "webpack-dev-server": "node conf/webpack-dev-server.js",
    "webpack": "webpack --config conf/webpack.config.production.js",
    "symlink": "node -e \"var s='../lib',d='node_modules/app',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\"",
    "postinstall": "npm run babel && npm run symlink && npm run copy-less &&  npm run webpack"
  },
  "author": "Ammar Khaku <ammar.khaku@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "pug": "^2.0.4",
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "css-loader": "^3.2.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "react-hot": "0.0.1",
    "react-hot-loader": "^4.12.14",
    "style-loader": "^1.0.0",
    "supertest": "^4.0.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  }
}
